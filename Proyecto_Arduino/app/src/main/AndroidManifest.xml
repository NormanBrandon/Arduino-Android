<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivy.arduino.proyecto_arduino">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-feature android:name="android.hadware.sensor.accelerometer" android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" android:screenOrientation="portrait" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".act_select_mode" android:screenOrientation="portrait"/>
        <activity android:name=".act_auto" android:screenOrientation="landscape"/>
        <activity android:name=".act_follow" android:screenOrientation="landscape"/>
        <activity
            android:name=".drive"
            android:screenOrientation="landscape" />
        <activity
            android:name=".remote"
            android:screenOrientation="landscape" />
        <activity android:name=".settings"
            android:screenOrientation="portrait"
        />
    </application>

</manifest>